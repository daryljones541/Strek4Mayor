        }
        .admin button {
            clear: left;
            margin: 10px;
        }
        .come-back-soon {
            background: url(@Url.Content("~/Pictures/FlagRightHalf.jpg")) no-repeat;
            background-size: cover;
            float: left;
            height: 100%;
            line-height: 6vh;
            text-align: center;
            vertical-align: middle;
            width: 50%;
            color: white;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
            font-size: 2vw;
            font-weight: bold;
        }
