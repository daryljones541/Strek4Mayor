        </div>

        <div class="navlink border-right tile-7">
            Volunteer
        </div>
        <div class="navlink right-curve tile-8">
            News
        </div>
    </div>   
    
    <div id="view-box">
        <div id="box-within-box">
            <a href='@Url.Action("Index", "Home")'>
                <div id="banner">
                    <img src="@Url.Content("~/Pictures/StefanBannerV5-w.png")" />
                </div>
            </a>
            @if (User.IsInRole("Admin"))
            {
                <div id="admin-box">
                    <button onclick="location.href='@Url.Action("Logout", "Users")';return false;">Logout</button>
                    <button onclick="location.href='@Url.Action("Index", "Admin")';return false;">Admin Home</button>
                </div>
            }
            <div id="ajax-box">
                @RenderBody()
            </div>

        </div>

        <div id="footer"></div>
        <div style="clear:both;margin-top:2vh;padding-left:3vw;">
