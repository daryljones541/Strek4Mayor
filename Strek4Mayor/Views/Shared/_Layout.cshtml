        .tile-6:hover {
            background: url(@Url.Content("~/Pictures/DarkFlag6.png")) no-repeat;
            background-size: cover;
        }
        .border-right {
            border-right: 1px solid black;
            background-size: cover;
        }
        @*
        #right-panel {
            background: #EEE8AA;
            border: 1px solid orange;
            font-size: 1.2vw;
            padding: 2%;
            position: absolute;
            right: 2vw;
            text-align: center;
            top: 10vh;
            width: 20vw;
        }

        #banner {
            left:8vw;
            position: absolute;
            right:8vw;
            top: 10vh;
        }
