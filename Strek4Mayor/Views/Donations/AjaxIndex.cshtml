@model Strek4Mayor.Models.DonationVM
<style>
    .amount-button {
        background-color: #F0E68C;
        border: 1px solid black;
        border-radius: 90%;
        float: left;
        height: 6vw;      
        margin: 5px;
        padding-top: 2.5vh;
        text-align: center;    
        width: 6vw;
    }

    .my-font {
        font-size: 1.8vw;
        font-weight: bold;
    }

    .amount-button:hover {
        cursor: pointer;
    }

    .highlight {
        background-color: greenyellow !important;
    }

    #left-side {
        float: left;
        margin-left: 5%;
        width: 50%;
    }

    #right-side {
        float: right;
        margin-right:5%;
        margin-top:1%;
        width: 40%;
    }

    #submit-donation {
        border: 1px solid gray;
        border-radius: 60%;
        font-size: 1.8vw;
        margin-left: 17%;
        margin-top: 1vh;
        padding:10px;
    }

    #submit-donation:hover {
        background-color: lightblue;
    }
    #clear
    {
        clear:both;
    }

 #logo {
    width: 100%;
    background: url(../Pictures/LogoSS.png) 40% 50%;
    background-repeat: no-repeat;
}
</style>

    <h1>Make a Donation</h1>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "donation-form" }))
    {
        <div id="logo">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div style="text-align:center;margin: 3%;">
                @Html.Label("How much do you want to donate?", htmlAttributes: new { @class = "control-label my-font" })
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "col-md-offset-1 my-font", @id = "amount-field" } })
            </div>
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger", @style = "text-align:center;" })
            <div id="left-side">
                <span class="my-font">Employment Info</span>
                <div class="form-horizontal" style="margin-top:10px;">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NoEmployment, htmlAttributes: new { @class = "control-label col-md-offset-1" })
                        @Html.EditorFor(model => model.NoEmployment, new { htmlAttributes = new { @id = "employ-check", @style = "transform:scale(2.5, 2.5);margin-left: 15px;" } })
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Occupation, htmlAttributes: new { @class = "employ-data control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Occupation, new { htmlAttributes = new { @id = "occupation-text", @class = "employ-data" } })
                            @Html.ValidationMessageFor(model => model.Occupation, "", new { @class = "text-danger employ-data" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Employer, htmlAttributes: new { @class = "employ-data control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Employer, new { htmlAttributes = new { @class = "employ-data" } })
                            @Html.ValidationMessageFor(model => model.Employer, "", new { @class = "text-danger employ-data" })
                        </div>
                    </div>
                </div>
            </div>
            <div id="right-side" class="my-font">
                <div class="row" style="margin-left:6.5vw;">
                    <div class="amount-button dollar" id="100">$100</div>
                    <div class="amount-button dollar" id="50">$50</div>
                </div>
                <div class="row" style="margin-left:3vw;">
                    <div class="amount-button dollar" id="20">$20</div>
                    <div class="amount-button dollar" id="10">$10</div>
                    <div class="amount-button dollar" id="5">$5</div>
                </div>
                <div class="row" style="margin-left:4vw;">
                    <input type="submit" id="submit-donation" value="Continue" />
                </div>
            </div>
    <div id="clear"></div>
        </div><!--end or logo div-->
    }
   
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    <script src="@Url.Content("~/Scripts/donation.js")"></script>
