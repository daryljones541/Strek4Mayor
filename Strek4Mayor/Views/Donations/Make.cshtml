@model Strek4Mayor.Models.DonationVM

@{
    ViewBag.Title = "Make";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Make</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "donation-form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Donation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-2">
            @Html.RadioButtonFor(model => model.Amount, 5, new { htmlAttributes = new { @class = "form-control" } }) @Html.Label("$5")
        </div>

        <div class="col-md-2">
            @Html.RadioButtonFor(model => model.Amount, 10, new { htmlAttributes = new { @class = "form-control" } }) @Html.Label("$10")
        </div>

        <div class="col-md-2">
            @Html.RadioButtonFor(model => model.Amount, 20, new { htmlAttributes = new { @class = "form-control" } }) @Html.Label("$20")
        </div>
        
        <div class="col-md-2">
            @Html.RadioButtonFor(model => model.Amount, 50, new { htmlAttributes = new { @class = "form-control" } }) @Html.Label("$50")
        </div>
        
        <div class="col-md-2">
            @Html.RadioButtonFor(model => model.Amount, 100, new { htmlAttributes = new { @class = "form-control" } }) @Html.Label("$100")
        </div>
        
        <div class="col-md-2">
            @Html.RadioButtonFor(model => model.Amount, 0, new { htmlAttributes = new { @class = "form-control" } }) @Html.Label("Other")
        </div> 
        
        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })

        <div class="form-group" style="margin-top:50px;">
            @Html.LabelFor(model => model.NoEmployment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoEmployment, new { htmlAttributes = new { @id = "employ-check" } })
                @Html.ValidationMessageFor(model => model.NoEmployment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Occupation, htmlAttributes: new { @class = "employ-data control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Occupation, new { htmlAttributes = new { @id="occupation-text", @class = "employ-data" } })
                @Html.ValidationMessageFor(model => model.Occupation, "", new { @class = "text-danger employ-data" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Employer, htmlAttributes: new { @class = "employ-data control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Employer, new { htmlAttributes = new { @class = "employ-data" } })
                @Html.ValidationMessageFor(model => model.Employer, "", new { @class = "text-danger employ-data" })
            </div>
        </div>
    </div>
    <hr />
    <input type="submit" value="Continue" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}
<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
<script src="@Url.Content("~/Scripts/donation.js")"></script>
