@model IEnumerable<Strek4Mayor.Models.NewsArticle>

<script src="~/Scripts/jquery-2.2.3.min.js"></script>
<script>
    $().ready(function () {
        $('.linkButton').click(
            function () {
                var linkUrl = $(this).attr('id');
                window.open(linkUrl, '_blank');
            });
    });

</script>
<style>
    a:link {
        color: blue;
        background-color: transparent;
        font-weight: bold;
        text-decoration: none;
    }

    a:visited {
        color: blue;
        background-color: transparent;
        font-weight: bold;
        text-decoration: none;
    }

    a:hover {
        color: red;
        background-color: transparent;
        font-weight: bold;
    }

    a:active {
        color: blue;
        background-color: transparent;
        font-weight: bold;
    }

    .links {
        width: 1024px;
        height: 800px;
        border: none;
        pointer-events: none;
        width: 15%;
    }

    .linkButton {
        cursor: pointer;
        height: 100px !important;
        width: 100px;
        overflow: hidden;
    }
</style>

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New Article", "Create")
</p>
<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div class="linkButton" id="@item.Url">
                    <div class="links">
                        <iframe src="@item.Url" scrolling="no" @*frameborder="0"*@></iframe>
                    </div>
                </div>
            </td>
            <td>
                <a href="@item.Url">@Html.DisplayFor(modelItem => item.Title)</a>
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.PublishDate)
                </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.NewsArticleID }) |
                @Html.ActionLink("Details", "Details", new { id = item.NewsArticleID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.NewsArticleID })
            </td>
        </tr>
    }

</table>

